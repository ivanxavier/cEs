@model cEs.Portal.Models.Comercial.ContatoViewModel
<div class="corpo">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="faleconosco">
                <h4 class="modal-title" id="  ModalLabel">Fale Conosco</h4>
                @using (Html.BeginForm("Index", "Faleconosco", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {

                   <ul class="quickmenu">
                        <li><P class="textovermelho">Fone: (11) 4258-2864 Comercial</li>
                        <li><P class="textovermelho"><i class="fa fa-whatsapp" style="font-size:16px;color:yellow"></i> (11) 98697-1800 - Jose Alves</li>
                        <li><P class="textovermelho"><i class="fa fa-whatsapp" style="font-size:16px;color:yellow"></i> (11) 98513-8133 - Ivan Xavier</li>
                        <li><P class="textovermelho"><i class="fa fa-whatsapp" style="font-size:16px;color:yellow"></i> (11) 94872-5453 - Luciana</li>
                        <li><P class="textovermelho">E-Mail: contato@sistemplam.com.br</li>
                    </ul>

                        <div class="container-narrow">
                            <div class="row-fluid">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12">
                                        <label class="control-label" for="">Nome</label>
                                        <div class="controls">
                                            <input type="text" id="Nome" name="Nome" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-4 col-sm-4">
                                        <label class="control-label" for="">Celular</label>
                                        <div class="controls">
                                            <input type="text" id="Celular" name="Celular" class="form-control phone_br" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-4 col-sm-4">
                                        <label class="control-label" for="">Telefone</label>
                                        <div class="controls">
                                            <input type="text" id="Telefone" name="Telefone" class="form-control phone_with_ddd" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12">
                                        <label class="control-label" for="">E-Mail</label>
                                        <div class="controls">
                                            <input type="email" id="Email" name="Email" placeholder="usuario@dominio.com" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12">
                                        <label class="control-label" for="">Mensagem</label>
                                        <div class="controls">
                                            <textarea name="Mensagem" id="Mensagem" rows="5" cols="80" class="form-control" required></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-4 altura">
                                        <a href="#" onclick="Salvar()" class="form-control btn btn-primary">Enviar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script src="~/js/ces/Faleconosco.js"></script>
    <link href="css/bootstrap-responsive.css" rel="stylesheet">
    <script type="text/javascript" src="~/js/jquery.mask.js"></script>
    <script type="text/javascript" src="~/js/Mascaras.js"></script>
}

